---
import { cn } from "@/lib/utils";
interface Props {
  placeholder?: string;
  componentId: string;
  marginLeft?: boolean;
}

const { placeholder, componentId, marginLeft } = Astro.props;
---

<input
  autocorrect="off"
  type="text"
  name={componentId}
  id={componentId}
  placeholder={placeholder}
  class={cn(
    "block uppercase w-1/2 my-2 p-2 pl-2 text-xl font-black placeholder:text-xs items-center rounded-lg text-center text-app-light-gray bg-slate-800 focus:bg-app-dark-blue focus:outline-none",
    marginLeft && "ml-2"
  )}
/>
