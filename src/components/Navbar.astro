>
  <div
    class="px-4 w-full max-w-screen-md m-auto flex items-center justify-evenly"
  >
    <nav class="flex gap-x-8">
      <a href="/"
        ><p class="font-black text-xl text-app-light-blue">
          ORDIFY<span class="text-xs text-yellow-600 opacity-75">beta</span>
        </p></a
      >
      <NavItem
        active={pathname.includes("/wordfeusk/") || pathname === "/wordfeusk"}
        href="/wordfeusk"
      >
        <p class="text-xs">WordFeusk</p>
      </NavItem>
      <NavItem
        active={pathname.includes("/ordlos/") || pathname === "/ordlos"}
        href="/ordlos"
      >
        <p class="text-xs">OrdLÃ¶s</p>
      </NavItem>
      <NavItem
        active={pathname.includes("/other-services/") ||
          pathname === "/other-services"}
        href="/other-services"
      >
        <p class="text-xs">...</p>
      </NavItem>
    </nav>
  </div>
</div>
