---
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
      maximum-scale="1/"
    />
    <link rel="shortcut icon" href="#" />
    <title>{title}</title>
  </head>
  <body
    class="h-screen min-h-[calc(100vh-80px)]: w-screen overflow-x-hidden flex flex-col justify-between bg-app-dark-gray text-app-light-gray"
  >
    <Navbar />
    <main
      class="flex-1 flex flex-col max-w-screen-md m-auto p-4 pt-20 md:pt-24 w-full"
    >
      <slot class="flex-1" />
    </main>
    <Footer />
  </body>
</html>
