---
import InputField from "@/components/InputField.astro";
import WordContainer from "@/components/WordContainer.astro";
import Layout from "@/layout/Layout.astro";
import { wordlib } from "@/lib/word-service";

const words: string[] = [];

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const payload = data.get("letters") as string;
    const length = parseInt(payload);
    words.push(...wordlib.ofLength(length));
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<Layout>
  <p class="text-xs font-semibold opacity-75 py-3">
    The <span class="text-app-light-blue">ofLength</span>
     feature finds all words that are of length (number).
  </p>

  <InputField service="Words of length:" />

  <WordContainer result={words} />
</Layout>
